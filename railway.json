{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "backend",
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "docker/backend.Dockerfile"
      },
      "deploy": {
        "startCommand": "npm run server:start"
      }
    },
    {
      "name": "frontend",
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "docker/frontend.Dockerfile"
      }
    }
  ]
}