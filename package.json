{
  "name": "nexus-vtt",
  "version": "0.1.0",
  "description": "A lightweight virtual tabletop for modern web browsers",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:server": "tsc --project tsconfig.server.json",
    "build:all": "npm run build && npm run build:server",
    "preview": "vite preview",
    "server:dev": "tsx watch server/index.ts",
    "server:start": "node dist/server/index.js",
    "start:all": "node scripts/start-all.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 100",
    "type-check": "tsc --noEmit",
    "db:start": "docker compose -f docker/docker-compose.dev.yml up -d postgres-dev",
    "db:stop": "docker compose -f docker/docker-compose.dev.yml stop postgres-dev",
    "db:down": "docker compose -f docker/docker-compose.dev.yml down",
    "db:reset": "docker compose -f docker/docker-compose.dev.yml down -v && docker compose -f docker/docker-compose.dev.yml up -d postgres-dev",
    "db:logs": "docker compose -f docker/docker-compose.dev.yml logs -f postgres-dev",
    "db:shell": "docker compose -f docker/docker-compose.dev.yml exec postgres-dev psql -U nexus -d nexus",
    "docker:dev": "docker-compose -f docker/docker-compose.dev.yml up",
    "docker:dev:build": "docker-compose -f docker/docker-compose.dev.yml up --build",
    "docker:dev:down": "docker-compose -f docker/docker-compose.dev.yml down",
    "organize-assets": "chmod +x scripts/organize-assets.sh && ./scripts/organize-assets.sh",
    "update-assets": "node scripts/update-asset-references.js",
    "generate-default-manifest": "node scripts/generate-default-manifest.js",
    "generate-thumbnails": "node scripts/generate-thumbnails.js",
    "generate-assets": "npm run generate-thumbnails && npm run generate-default-manifest",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit/**",
    "test:integration": "vitest run tests/integration",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:ci": "npm run lint && npm run type-check && npm run test:unit && npm run test:integration",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "postinstall": "patch-package"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@3d-dice/dice-box": "^1.1.4",
    "@msgpack/msgpack": "^3.1.2",
    "@react-three/cannon": "^6.6.0",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.3.0",
    "cannon-es": "^0.20.0",
    "compression": "^1.8.1",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-session": "^1.18.0",
    "helmet": "^8.1.0",
    "immer": "^10.2.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.552.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-oauth2": "^1.8.0",
    "pdfjs-dist": "^5.4.394",
    "pg": "^8.11.3",
    "react": "^19.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.5",
    "sharp": "^0.34.4",
    "sonner": "^2.0.7",
    "three": "^0.181.0",
    "transit-js": "^0.8.874",
    "uuid": "^13.0.0",
    "ws": "^8.14.2",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/config-array": "^0.21.0",
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/compression": "^1.8.1",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/express-session": "^1.18.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^24.10.0",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/pg": "^8.15.6",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/transit-js": "^0.8.3",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/ui": "^4.0.6",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.23",
    "glob": "^11.0.3",
    "globals": "^16.5.0",
    "hermes-estree": "^0.32.1",
    "hermes-parser": "^0.32.1",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.1",
    "patch-package": "^8.0.1",
    "prettier": "^3.6.2",
    "tsx": "^4.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.1.9",
    "vitest": "^4.0.6"
  }
}
